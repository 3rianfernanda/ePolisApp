@model IEnumerable<Epolis.Models.Munit>
@*@model IEnumerable<Epolis.Models.ViewModel>*@

@{
    ViewData["Title"] = "Index";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-medal icon-gradient bg-tempting-azure"></i>
            </div>
        </div>
        <div class="page-title-heading">DAFTAR UNIT</div>
    </div>
</div>
<div class="main-card card col-12">
    <div class="card-body">
        <div>
            <a asp-action="Create" class="btn-lg btn-add fa fa-plus-square" data-toggle="tooltip" title="Tambah Baru"></a>
        </div>
        <br />
        <table style="width: 100%;" id="table" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>NO</th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.unit.MUSERGROUPID)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.UNITCODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UNITNAME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ADDRESS)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sno = 0;
                    List<Munit> listMunit = (List<Munit>)ViewData["listMunit"];
                    if (listMunit != null)
                    {
                        foreach (var item in listMunit)
                        {
                            <tr>
                                <td style="text-align:center">
                                    @{ sno++; }
                                    @sno
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UNITCODE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UNITNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ADDRESS)
                                </td>
                                <td style="text-align:center">
                                    <a asp-action="Edit" asp-route-id="@item.ID" data-toggle="tooltip" title="Edit" class="btn btn-edit fa fa-edit"></a> |
                                    <a asp-action="Details" asp-route-id="@item.ID" data-toggle="tooltip" title="Lihat Detail" class="btn btn-detail fa fa-eye"></a> |
                                    <a asp-action="Delete" asp-route-id="@item.ID" data-toggle="tooltip" title="Hapus" class="btn btn-delete fa fa-trash" onclick="return confirm('Hapus data ini?')"></a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
